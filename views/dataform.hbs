<div class="container">
    <div class="row">
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <form action="/users/addintent" method="POST">
                        <input name="intentToAdd" type="text" class="form-control" placeholder="add your intent"><br>
                        <input name="intentReplyToAdd" type="text" class="form-control" placeholder="Add a reply"><br>
                        <button class="form-control btn btn-success">Add</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-6">
            {{#each intentData}}
            <div class="card">
                <div class="card-body">
                    <form action="/users/updateintent/{{intent}}" method="POST">
                        <input name="intentFulifilled" type="text" class="form-control" placeholder="{{intent}}"
                            readonly>
                        <br>
                        <input name="intentReplyFulifilled" type="text" class="form-control" placeholder="add intent replies">
                        <br>
                        <input name="intentReplyCount" type="text" class="form-control" placeholder="{{reply.length}}"
                            readonly>
                        <br>
                        <button class="form-control btn btn-warning">Update</button>
                    </form>
                </div>
            </div>
            <br>
            {{/each}}
        </div>
    </div>
</div>